public static int determineCoordinateArea(int x, int y) {
        int area = 0;
        if (x > 0 && y > 0) {
            area = 1;
        } else if (x < 0 && y > 0) {
            area = 2;
        } else if (x < 0 && y < 0) {
            area = 3;
        } else if (x > 0 && y < 0) {
            area = 4;
        }
        return area;
    }

