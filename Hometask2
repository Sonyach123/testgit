    class StringUtils {
    public static String intToString(int number) {
        return Integer.toString(number);
    }
    
    public static String floatToString(float number) {
        return Float.toString(number);
    }
    
    public static int stringToInt(String str) {
        return Integer.parseInt(str);
    }
    
    public static float stringToFloat(String str) {
        return Float.parseFloat(str);
    }
    
    public static int lengthOfShortestWord(String sentence) {
        final String[] words = sentence.replaceAll("[^a-zA-Z ]", "").toLowerCase().split("\\s+");
        int minLength = words[0].length();
        for (String w: words) {
            int currentLength = w.length();
            if (currentLength < minLength) {
                minLength = currentLength;
            }
        }
        return minLength;
    }
    
    public static int countOfWords(String sentence) {
        return sentence.replaceAll("[^a-zA-Z ]", "").toLowerCase().split("\\s+").length;
    }
    
    public static String removeLastWord(String sentence) {
        return sentence.substring(0, sentence.lastIndexOf(" "));
    }
}
